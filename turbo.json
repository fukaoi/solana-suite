{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/*"
      ]
    },
    "prepublish": {
      "dependsOn": [
        "build",
        "eslint",
        "prettier:fix",
        "depcheck"
      ],
      "cache": false
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "src/**/*.ts",
        "test/**/*.ts"
      ]
    },
    "prettier": {},
    "prettier:fix": {},
    "eslint": {},
    "clean": {},
    "depcheck": {}
  }
}
