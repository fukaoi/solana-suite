{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/*"
      ]
    },
    "prepublish": {
      "dependsOn": [
        "^build",
        "eslint",
        "prettier",
        "depcheck"
      ],
      "cache": false
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "src/**/*.ts",
        "test/**/*.ts"
      ]
    },
    "prettier": {},
    "prettier:fix": {},
    "eslint": {},
    "clean": {},
    "depcheck": {}
  }
}
